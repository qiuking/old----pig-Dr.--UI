<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rate_bar"
    android:layout_height="26dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="left|center">

    <TextView           android:id="@+id/bar_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:gravity="end"/>

    <ImageView         android:id="@+id/bar_rate"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="7dp"
        android:src="@drawable/rate_unclip_1"
        android:background="@drawable/rate_clip" />

    <TextView          android:id="@+id/bar_rate_percent"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent1"
        android:gravity="right"/>

    <TextView          android:id="@+id/bar_info"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="right"/>


</LinearLayout>





